<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorAccen"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/log2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/log3"

                    android:layout_marginLeft="@dimen/dp_20"/>
                <EditText
                    android:layout_width="@dimen/dp_156"
                    android:id="@+id/regactivity_name"
                    android:layout_height="wrap_content"
                    android:hint="请输入邮箱"
                   />
                <Button
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/colorAccen"
                    android:textColor="#fff"
                    android:text="获取验证码"
                    android:id="@+id/regactivity_yz"
                    android:textSize="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/log3"

                    android:layout_marginLeft="@dimen/dp_20"/>
                <EditText
                    android:layout_width="@dimen/dp_156"
                    android:id="@+id/regactivity_yzm"
                    android:layout_height="wrap_content"
                    android:hint="请输入邮箱"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/log4"
                    android:layout_marginLeft="@dimen/dp_20"/>
                <EditText
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="wrap_content"
                    android:hint="请输入密码"
                    android:id="@+id/regactivity_pwd"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/regactivity_eye"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/log5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/log4"
                    android:layout_marginLeft="@dimen/dp_20"/>
                <EditText
                    android:layout_width="@dimen/dp_160"
                    android:layout_height="wrap_content"
                    android:hint="请再次输入密码"
                    android:id="@+id/regactivity_pwd2"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/regactivity_eye2"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/log5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/log3"

                    android:layout_marginLeft="@dimen/dp_20"/>
                <EditText
                    android:layout_width="@dimen/dp_156"
                    android:id="@+id/regactivity_yqm"
                    android:layout_height="wrap_content"
                    android:hint="请输入邮箱"
                    />
                <TextView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_20"
                    android:text="选填"
                    android:id="@+id/regactivity_xt"
                    android:textSize="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:text="注册"
                    android:id="@+id/regactivity_reg"
                    android:textColor="#fff"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@color/colorAccen"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>